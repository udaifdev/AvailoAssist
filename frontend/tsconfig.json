{
  "compilerOptions": {
    "target": "es5",                        
    "lib": ["DOM", "ES2015", "dom.iterable", "esnext"],
    "allowJs": true,                         
    "skipLibCheck": true,                    
    "esModuleInterop": true,                 
    "strict": true,                          
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",                      
    "moduleResolution": "node",              
    "resolveJsonModule": true,               
    "jsx": "react-jsx",                      
    "outDir": "./build",                     
    "noEmit": false,                 
    "downlevelIteration": true
  },
  "baseUrl": "./src",
  "paths": {
    "@/*": ["*"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build"
  ]
}
